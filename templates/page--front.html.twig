<div class="layout-container">
{% include "@helpet/partials/header.html.twig" %}

{% if page.primary_menu %}
  <nav class="navbar-pri navbar-expand-lg navbar-light bg-light">
   {{ page.primary_menu }}
   </nav>
{% endif %}
{% if page.page_top %}
<div class="layaud-banner-top" role="contentinfo">
           {{ page.page_top }}
</div>
{% endif %}

{% if page.banner %}
<div>
    {{ page.banner }}
</div>
{% endif %}

<div class="container ">
   <div class="row text-center">
   <div class="col-md-12">
      {{ page.content }}
   </div>
</div>
</div>

       {{ page.sidebar_first }}
<div class="container text-center" style="width: 65%">
  <div class="container">
    <div class="row">
      {% if page.socialmedia %}
      {{ page.socialmedia }}
      {% endif %}
      {% if page.marca %}
      {{ page.marca }}
      {% endif %}

    </div>
  </div>
</div>


