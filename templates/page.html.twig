<div class="layout-container">
{% include "@helpet/partials/header.html.twig" %}
{% include "@helpet/partials/primary_menu.html.twig" %}

{% if page.banner %}
    {{ page.banner }}
{% endif %}

{% if page.sidebar_first %}
      {{ page.sidebar_first }}
{% endif %}

{% if page.page_top %}
<div class="layaud-banner-top" role="contentinfo">
    {{ page.page_top }}
</div>
{% endif %}


<div class="container ">
   <div class="row text-center">
    <div class="col-md-12">
      {{ page.content }}
    </div>
   </div>
</div>
<div class="section mt-4" id="footer">
{% if page.breadcrumb %}
    {{ page.breadcrumb }}
{% endif %}
<div class="container text-center" style="width: 65%">
  <div class="container">
    <div class="row">
      {% if page.socialmedia %}
      {{ page.socialmedia }}
      {% endif %}
    </div>
   </div>
</div>
</div>


{% if page.secondary_menu %}
<nav class="navbar-banner navbar-expand-lg navbar-dark bg-dark mt-2">
   {{ page.secondary_menu  }}
</nav>
{% endif %}
{{ page.footer }}
</div>

